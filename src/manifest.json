{
  "name": "FB Hide Reels",
  "version": "2.0.0",
  "description": "This extension hides Reels and recommendations on Facebook",

  "manifest_version": 3,
  "background": [
    {
      "scripts": ["background.js"],
      "persistent": true
    }
  ],
  "permissions": ["storage"],
  "icons": {
    "16": "logo.png",
    "24": "logo.png",
    "48": "logo.png",
    "32": "logo.png"
  },
  "action": {
    "default_icon": {
      "16": "logo.png",
      "24": "logo.png",
      "32": "logo.png",
      "48": "logo.png"
    },
    "default_title": "Options",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/",
        "https://web.facebook.com/",
        "https://m.facebook.com/",
        "https://facebook.com/"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
